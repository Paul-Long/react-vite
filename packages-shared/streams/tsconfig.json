{
  "include": ["./**/*", "../types/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "types": ["node"],
    "lib": ["DOM", "ES2020", "esnext"],
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "./*": ["./*"],
      "../*": ["../*"]
    }
  }
}
