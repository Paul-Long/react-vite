{
  "include": ["./**/*", "../types/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2015",
    "types": ["node"],
    "lib": ["DOM", "ES5"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "./*": ["./*"],
      "../*": ["../*"]
