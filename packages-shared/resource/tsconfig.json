{
  "include": ["./**/*", "../types/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2015",
    "types": ["node"],
    "lib": [
      "DOM",
      "ES5",
      "es2015.promise"
    ],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "./*": ["./*"],
      "../*": ["../*"]
    }
  }
}
